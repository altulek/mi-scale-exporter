<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MiScaleExporter.MAUI.Views.SettingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:MiScaleExporter.MAUI.Behaviors;assembly=MiScaleExporter.MAUI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:MiScaleExporter.MAUI.ViewModels"
    Title="{Binding Title}">
    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ScrollView Grid.Row="1" HorizontalOptions="FillAndExpand">
                <StackLayout
                    Padding="15,24,15,24"
                    Orientation="Vertical"
                    Spacing="20">
                    <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <StackLayout
                            Padding="15,24,15,24"
                            Orientation="Vertical"
                            Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                Text="Scale Settings" />
                            <BoxView
                                HeightRequest="2"
                                HorizontalOptions="Fill"
                                Color="Gray" />
                            <Label FontSize="Small" Text="Birthday" />
                            <DatePicker Date="{Binding Birthday}" />
                            
                            <Label FontSize="Small" Text="Height" />
                            <Entry
                                    FontSize="Medium"
                                    Keyboard="Numeric"
                                    Text="{Binding Height, Mode=TwoWay}">
                                <Entry.Behaviors>
                                    <behaviors:NumericIntValidationBehavior />
                                </Entry.Behaviors>
                            </Entry>
                            <Label FontSize="Small" Text="Sex" />
                            <HorizontalStackLayout>
                                <RadioButton
                                    CheckedChanged="SexRadioSetToFemale"
                                    Content="Female"
                                    GroupName="Sex"
                                    IsChecked="{Binding IsFemaleSelected}"
                                    Value="0" />
                                <RadioButton
                                    CheckedChanged="SexRadioSetToMale"
                                    Content="Male"
                                    GroupName="Sex"
                                    IsChecked="{Binding IsMaleSelected}"
                                    Value="1" />
                            </HorizontalStackLayout>

                            <Label FontSize="Small" Text="Scale Model" />
                            <RadioButton
                                CheckedChanged="ScaleTypeSetToBodyCompositionScale"
                                Content="Mi Body Composition Scale 1 / 2"
                                GroupName="ScaleType"
                                IsChecked="{Binding IsMiBodyCompositionScaleSelected}"
                                Value="0" />
                            <RadioButton
                                CheckedChanged="ScaleTypeSetToMiscale"
                                Content="Mi Smart Scale"
                                GroupName="ScaleType"
                                IsChecked="{Binding IsMiSmartScaleSelected}"
                                Value="1" />
                            <Label FontSize="Small" Text="Bluetooth Address" />
                            <Entry FontSize="Medium" Text="{Binding Address, Mode=TwoWay}" />
                            <Label FontSize="Small" Text="Device ID" />
                            <Entry FontSize="Medium" Text="{Binding DeviceId, Mode=TwoWay}" />

                        </StackLayout>

                    </Border>
                    <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <StackLayout
                            Padding="15,24,15,24"
                            Orientation="Vertical"
                            Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                Text="Garmin Settings" />
                            <BoxView
                                HeightRequest="2"
                                HorizontalOptions="Fill"
                                Color="Gray" />
                            <Label FontSize="Small" Text="Email" />
                            <Entry
                                    FontSize="Medium"
                                    Keyboard="Email"
                                    Text="{Binding Email, Mode=TwoWay}" />
                            <Label FontSize="Small" Text="Password" />
                            <Entry
                                    FontSize="Medium"
                                    IsPassword="True"
                                    Text="{Binding Password, Mode=TwoWay}" />

                        </StackLayout>
                    </Border>
                    <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <StackLayout
                            Padding="15,24,15,24"
                            Orientation="Vertical"
                            Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                Text="App Settings" />
                            <BoxView
                                HeightRequest="2"
                                HorizontalOptions="Fill"
                                Color="Gray" />

                            <Label FontSize="Small" Text="Alternate External API Address" />
                            <Entry FontSize="Medium" Text="{Binding ApiAddress, Mode=TwoWay}" />
                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="Use External API"
                                    VerticalOptions="Center" />
                                <CheckBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    IsChecked="{Binding OneClickScanAndUpload, Mode=TwoWay}"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="One click - Scan &amp; Upload"
                                    VerticalOptions="Center" />
                                <CheckBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    IsChecked="{Binding ShowDebugInfo, Mode=TwoWay}"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="Show Debug Info during scan"
                                    VerticalOptions="Center" />

                            </Grid>
                            <Button
                                Margin="0,10,0,10"
                                BackgroundColor="{StaticResource Primary}"
                                Command="{Binding ResetCommand}"
                                Text="Reset to Default"
                                TextColor="White" />


                        </StackLayout>
                    </Border>
                </StackLayout>
            </ScrollView>
        </Grid>
    </AbsoluteLayout>
</ContentPage>